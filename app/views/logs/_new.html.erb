<div id="new-log-form">
  <h3>Add your miles</h3>
  <%= form_for :log, url: user_path, method: :post do |f| %>
    <div class="form-group">
      <%= f.date_select :date, :order => [:day, :month, :year], :default => Date.today %>
    </div>
    <div class="form-group" id="new-log-form-mileage">
      <input type="number" class="form-control"<%= f.number_field :mileage, placeholder: "Miles" %>
    </div>
    <div class="form-group">
      <%= f.hidden_field :user_id, value: session[:user_id] %>
    </div>
    <%= f.submit :class => "btn", :id => "new-log-btn" %>
  <% end %>
</div>


