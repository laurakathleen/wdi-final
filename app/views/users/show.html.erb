$(function () {

    Highcharts.chart('user-daily-container', {
        chart: {
            style: {
                fontFamily: 'sans-serif',
                color: "#fff"
        },
            type: "bar"
        },
        title: {
            text: "Today's Mileage: <%= @user.logs.where(date: Date.today).sum(:mileage) %> miles",
            color: "#fff",
        },
        xAxis: {
            categories: null,
            tickInterval: null
        },
        yAxis: {
          min: 0,
          max: userDaily + 1,
          tickInterval: null,
            title: {
                text: "Miles"
            }
        },
        legend: {
            reversed: false
        },
        plotOptions: {
            bar: {
                dataLabels: {
                  enabled: true
                },
            }
        },
        labels: {
            x: null
        },
        series: [{
            name: [userFirstName],
            data: [userDaily]
        }]
    });
});


$(function () {
    Highcharts.chart('user-total-container', {
        chart: {
            type: 'bar'
        },
        title: {
            text: "Total Mileage: <%= @user.logs.sum(:mileage) %> miles",
            color: '#fff'
        },
        xAxis: {
            categories: null
        },
        yAxis: {
        	min: 0,
        	max: userTotal + 5,
            title: {
                text: 'Miles'
            }
        },
        legend: {
            reversed: false
        },
        plotOptions: {
            bar: {
                dataLabels: {
                	enabled: true
                }
            }
        },
        series: [{
            name: [userFirstName],
            data: [userTotal]
        }]
    });
});

</script>
