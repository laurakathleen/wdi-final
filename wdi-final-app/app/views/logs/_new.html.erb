<div class="row">
  <div class="col-md-4 offset-md-4 col-xs-12"><%= form_for :log, url: user_path, method: :post do |f| %>
  <div class="form-group">
    <%= f.datetime_select :date, :order => [:day, :month, :year], :default => Date.today %>
  </div>
  <div class="form-group">
    <input type="number" class="form-control"<%= f.number_field :mileage, placeholder: "Miles" %>
  </div>
  <div class="form-group">
    <%= f.hidden_field :user_id, value: session[:user_id] %>
  </div>
  <%= f.submit %>
  <% end %>
  </div>
</div>

